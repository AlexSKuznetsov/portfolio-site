---
import SEO from '../components/layout/SEO.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const { 
  title,
  description = 'Skilled Full Stack Developer with 5+ years of experience in fintech, telecom, manufacturing, retail, and healthcare. Specializing in modern web technologies, AI applications, and workflow automation.',
  image,
  type = 'website'
} = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='google-site-verification' content='akWOXNLJv9-XEjt9nxEazWd0vdx3o71cPCmijhUwLs4' />
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
    />
  </head>
  <body class='bg-gray-900'>
    <slot />
    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-border: hsl(17, 24%, 90%);
      }

      @font-face {
        font-family: 'IBM Plex Sans';
        font-style: normal;
        font-weight: 100 900;
        font-display: optional;
        src: url(/fonts/ibm-plex-sans-var.woff2) format('woff2');
      }
      html {
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      body {
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>
