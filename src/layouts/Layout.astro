---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='description'
      content='Alex Kuznetsov. Personal portfolio site. Skilled and ambitious Frontend/JavaScript Developer with 3+ years of wide-ranging experience in the fintech, telecom, manufacturer, retail, and healthcare domains in building web applications.'
    />
    <title>{title}</title>
  </head>
  <body class='font-sans bg-gray-900'>
    <slot />
    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      @font-face {
        font-family: 'IBM Plex Sans';
        font-style: normal;
        font-weight: 100 900;
        font-display: optional;
        src: url(/fonts/ibm-plex-sans-var.woff2) format('woff2');
      }

      html {
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      body {
        margin: 0;
      }
    </style>
  </body>
</html>
